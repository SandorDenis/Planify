<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Enter the room's name: "
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="18dp">
        </TextView>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/roomname">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick a date:"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textSize="18dp">
        </TextView>

        <Button
            android:id="@+id/datepicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:onClick="openDatePicker"
            app:cornerRadius="12dp"
            android:backgroundTint="#388697"
            android:text=" Pick a date for your meeting"></Button>

        <TextView
            android:id="@+id/textdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Your selected date will be displayed here."
            android:layout_marginBottom="28dp"
            android:textSize="18dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick a time interval for your meeting:"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="18dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/timeinterval1"
                android:enabled="false"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval1"
                app:cornerRadius="12dp"
                android:text="6:00AM - 7:00AM">
                </Button>

            <Button
                android:id="@+id/timeinterval2"
                android:enabled="false"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval2"
                app:cornerRadius="12dp"
                android:text="7:00AM - 8:00AM"></Button>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/timeinterval3"
            android:enabled="false"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:onClick="rentTimeInterval3"
            app:cornerRadius="12dp"
            android:text="8:00AM - 9:00AM"></Button>

        <Button
            android:id="@+id/timeinterval4"
            android:enabled="false"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:onClick="rentTimeInterval4"
            app:cornerRadius="12dp"
            android:text="9:00AM - 10:00AM"></Button>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/timeinterval5"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval5"
                app:cornerRadius="12dp"
                android:text="10:00AM - 11:00AM"></Button>

            <Button
                android:id="@+id/timeinterval6"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval6"
                app:cornerRadius="12dp"
                android:text="11:00AM - 12:00PM">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/timeinterval7"
                android:enabled="false"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval7"
                app:cornerRadius="12dp"
                android:text="12:00PM - 1:00PM"></Button>

            <Button
                android:id="@+id/timeinterval8"
                android:enabled="false"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval8"
                app:cornerRadius="12dp"
                android:text="1:00PM - 2:00PM"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/timeinterval9"
                android:enabled="false"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval9"
                app:cornerRadius="12dp"
                android:text="2:00PM - 3:00PM"></Button>

            <Button
                android:id="@+id/timeinterval10"
                android:enabled="false"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval10"
                app:cornerRadius="12dp"
                android:text="3:00PM - 4:00PM"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/timeinterval11"
                android:enabled="false"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval11"
                app:cornerRadius="12dp"
                android:text="4:00PM - 5:00PM"></Button>

            <Button
                android:id="@+id/timeinterval12"
                android:enabled="false"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval12"
                app:cornerRadius="12dp"
                android:text="5:00PM - 6:00PM"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/timeinterval13"
                android:enabled="false"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval13"
                app:cornerRadius="12dp"
                android:text="6:00PM - 7:00PM"></Button>

            <Button
                android:id="@+id/timeinterval14"
                android:enabled="false"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:onClick="rentTimeInterval14"
                app:cornerRadius="12dp"
                android:text="7:00PM - 8:00PM"></Button>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/timeinterval15"
            android:enabled="false"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:onClick="rentTimeInterval15"
            app:cornerRadius="12dp"
            android:text="8:00PM - 9:00PM"></Button>

        <Button
            android:id="@+id/timeinterval16"
            android:enabled="false"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:onClick="rentTimeInterval16"
            app:cornerRadius="12dp"
            android:text="9:00PM - 10:00PM"></Button>

    </LinearLayout>

    </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>